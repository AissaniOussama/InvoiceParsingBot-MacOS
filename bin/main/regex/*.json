{
  "invoice_number": [
    "(?im)(?:invoice number|invoice no\\.?|invoice #|inv\\.?|rechnungsnummer|rechnung\\s*nr\\.?)[:\\s]*([A-Za-z0-9_\\-:/]{5,60})",
    "(?m)\\b(in_[A-Za-z0-9]{12,})\\b",
    "(?m)\\b([A-Z]{2}\\d{6,})\\b",
    "(?m)\\b([0-9]{5,10}\\/\\d{2,4})\\b"
  ],
  "invoice_date": [
    "(?im)(?:invoice date|rechnungsdatum|date of issue|datum)[:\\s]*([A-Za-z]+ \\d{1,2}, \\d{4})",
    "(?m)\\b(\\d{1,2}[./-]\\d{1,2}[./-]\\d{4})\\b",
    "(?m)\\b(\\d{4}[./-]\\d{1,2}[./-]\\d{1,2})\\b"
  ],
  "bruto_amount": [
    "(?im)(?:total amount|amount due|total|gesamtbetrag|brutto)[:\\s]*€?\\s*([0-9]{1,3}(?:[.,\\s]\\d{3})*(?:[.,]\\d{2})?)"
  ],
  "net_amount": [
    "(?im)(?:net amount|netto|net|subtotal)[:\\s]*€?\\s*([0-9]{1,3}(?:[.,\\s]\\d{3})*(?:[.,]\\d{2})?)"
  ],
  "service_period": [
    "(?im)(?:service period|leistungszeitraum|billing period)[:\\s]*([0-9./-]{6,}\\s*[-–]\\s*[0-9./-]{6,})"
  ],
  "company_name": [
    "(?im)(?:supplier|vendor|from|issued by|seller|firma|company|anbieter)[:\\s]*([A-Za-z0-9&.,'\\\\- ]{3,80})",
    "(?m)^\\s*([A-Z][A-Za-z0-9&\\s\\.\\-]{2,80}(?:GmbH|AG|Ltd|Inc|LLC|Co\\.?))\\s*$"
  ]
}
